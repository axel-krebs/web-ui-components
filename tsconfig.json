{
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "target/compiled/uilib.js",
    "sourceMap": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "lit-element": ["node_modules/lit-element/lit-element.d.ts"]
    },
    "allowUmdGlobalAccess": true
  },
  "include": ["src/main/typescript/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}